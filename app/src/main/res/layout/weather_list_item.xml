<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dip"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/forecastTime"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/blackText"
        android:fontFamily="@font/san_fransisco_regular"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/forecastImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00"/>

    <ImageView
        android:id="@+id/forecastImage"
        android:layout_width="48dip"
        android:layout_height="40dip"
        android:padding="2dip"
        app:layout_constraintBottom_toTopOf="@+id/forecastTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecastTime"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/forecastTemp"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/blackText"
        android:fontFamily="@font/san_fransisco_regular"
        android:textStyle="bold"
        android:padding="4dip"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forecastImage"
        tools:text="29"/>

</androidx.constraintlayout.widget.ConstraintLayout>